{
  "private": true,
  "name": "experiterm",
  "description": "Monorepo for housing the Experiterm",
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "simplestyle-js": "^3.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "12.1.4",
    "@commitlint/config-conventional": "12.1.4",
    "@types/node": "^16.4.0",
    "@vitejs/plugin-react-refresh": "^1.3.5",
    "eslint-config-react-yas": "^1.3.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.3.5",
    "vite": "^2.4.3",
    "vite-plugin-env-compatible": "^1.0.0",
    "vite-plugin-svgr": "^0.3.0",
    "vite-tsconfig-paths": "^3.3.13"
  },
  "scripts": {
    "bootstrap": "yarn && yarn lerna bootstrap",
    "git-commit-msg": "commitlint <",
    "git-pre-commit": "lerna run --stream precommit --since HEAD",
    "lint": "lerna run lint",
    "start:ui": "yarn workspace @experiterm/client start",
    "start:daemon": "yarn workspace @experiterm/daemon start"
  },
  "lint-staged": {
    "*.{ts,tsx}": "yarn lint"
  }
}
